      <mapping class="com.accp.pojo.Users"/>
      <mapping resource="configs/mapping/Users.hbm.xml"/>
      <mapping class="com.accp.pojo.Waybill"/>
      <mapping resource="configs/mapping/Waybill.hbm.xml"/>
  </session-factory>
</hibernate-configuration>